<launch>
  <!-- 加载配置文件 -->
  <rosparam command="load" file="$(find imu_clean)/config/example.yaml" />

  <!--可选：覆盖配置参数（示例，可根据场景修改） -->
  <!-- <param name="imu_clean/imu_topic" value="/your_custom_imu_topic" /> -->
  <!-- <param name="imu_clean/window_size" value="30" /> -->

  <!-- 启动IMU清洗节点 -->
  
  <!-- C++版本（推荐，性能更高，线程安全） -->
  <node name="imu_clean_node" 
        pkg="imu_clean" 
        type="imu_clean_node" 
        output="screen"
        respawn="true">
    <!-- 传递核心参数（也可通过yaml/命令行覆盖） -->
    <param name="is_9axis" value="$(arg is_9axis)" />
  </node>

  <!-- Python版本（灵活，易调试） -->
  <!-- <node name="imu_clean_py_node" 
        pkg="imu_clean" 
        type="imu_data_cleaner.py" 
        output="screen"
        respawn="true"
        args="$(find imu_clean)/config/example.yaml">
  </node> -->

  <!--  可选：启动rviz查看数据（需提前配置rviz文件） -->
  <!-- <node name="rviz" pkg="rviz" type="rviz" args="-d $(find imu_clean)/rviz/imu_clean.rviz" /> -->

  <!-- 参数声明（方便启动时动态传参） -->
  <arg name="is_9axis" default="true" description="是否启用9轴IMU（磁力计）" />
</launch>