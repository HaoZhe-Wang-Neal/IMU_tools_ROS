<launch>
  <!-- 1. 加载VQF配置文件 -->
  <rosparam command="load" file="$(find vqf)/config/example.yaml" />

  <!-- 2. 可选：动态覆盖参数 -->
  <!-- <param name="vqf/imu_topic" value="/your_imu_topic" /> -->
  <!-- <param name="vqf/is_9axis" value="false" /> -->

  <!-- 3. 启动VQF节点（二选一：C++/Python） -->

  
  <!-- C++版本（性能更高） -->
  <node name="vqf_node" 
        pkg="vqf" 
        type="vqf_node" 
        output="screen"
        respawn="true">
    <param name="is_9axis" value="$(arg is_9axis)" />
  </node>


  <!-- Python版本（易调试） -->
  <!-- <node name="vqf_py_node" 
        pkg="vqf" 
        type="vqf_node.py" 
        output="screen"
        respawn="true"
        args="$(find vqf)/config/example.yaml">
  </node> -->

  <!-- 4. 参数声明 -->
  <arg name="is_9axis" default="true" description="是否启用9轴IMU融合磁力计" />

  <!-- 5. 可选：启动RVIZ查看姿态 -->
  <!-- <node name="rviz" pkg="rviz" type="rviz" args="-d $(find vqf)/rviz/vqf.rviz" /> -->
</launch>